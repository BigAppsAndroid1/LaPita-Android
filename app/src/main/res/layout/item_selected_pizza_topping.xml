<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:layout_width="110dp">

    <TextView
        android:id="@+id/topping_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heebo_light"
        android:textColor="@color/black"
        android:visibility="gone"
        tools:text="שלב 2"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/badge_topping"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/rectangle_item"
        android:layoutDirection="rtl"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:layout_width="110dp">

        <TextView
            android:id="@+id/name_topping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="2dp"
            android:lineSpacingMultiplier="0.8"
            android:gravity="right|center"
            android:paddingStart="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="frtuyjhrfgu\njhrftgujh" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/close"
            android:backgroundTint="@color/white"
            app:layout_constraintWidth_percent="0.20" />

    </LinearLayout>
</LinearLayout>

